# CloudDataOrchestrator v2.0 - Variáveis de Ambiente
# Copie este arquivo para .env e configure suas chaves de API

# Configurações AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
DYNAMODB_TABLE=clouddataorchestrator

# Chaves de API para Provedores de Dados
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
OPENWEATHER_API_KEY=your_openweather_api_key
NEWSAPI_API_KEY=your_newsapi_api_key
COINAPI_API_KEY=your_coinapi_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Configurações de Email para Alertas
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_TO_EMAILS=admin@company.com,ops@company.com

# Configurações do Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Configurações de Webhook
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Configurações de Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configurações de ML
ML_ENABLED=true
ML_ALGORITHM=isolation_forest
ML_WINDOW_SIZE=100
ML_THRESHOLD=0.95
ML_CONTAMINATION=0.1

# Configurações de Alertas
ALERTS_ENABLED=true
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=85
ALERT_ERROR_RATE_THRESHOLD=5
ALERT_COOLDOWN_MINUTES=5

# Configurações de Monitoramento
METRICS_ENABLED=true
METRICS_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# Configurações de Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=100

# Configurações de Segurança
JWT_SECRET=your_jwt_secret_key
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:8501,https://yourdomain.com
